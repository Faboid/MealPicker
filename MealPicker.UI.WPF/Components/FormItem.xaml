<UserControl x:Class="MealPicker.UI.WPF.Components.FormItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MealPicker.UI.WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="control"
             >
    
    <DockPanel>

        <DockPanel.Resources>
            <SolidColorBrush x:Key="Text" Color="White" Opacity="0.67"/>
        </DockPanel.Resources>

        <TextBlock 
            DockPanel.Dock="Top"
            Margin="0, 0, 0, 5"
            HorizontalAlignment="Center"
            FontSize="17"
            Foreground="{DynamicResource Text}"
            Text="{Binding ElementName=control, Path=Label}"
            />
        
        <TextBox 
            Text="{Binding ElementName=control, Path=Text, UpdateSourceTrigger=PropertyChanged}"
            TextAlignment="Center"
            DockPanel.Dock="Bottom"
            />
        
    </DockPanel>
    
</UserControl>
